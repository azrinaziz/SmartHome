<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="app.smarthome.smarthome.DoorModule2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="216.5sp"
        android:id="@+id/imageView17"
        android:src="@drawable/doormodule2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="All is call in home."
        android:id="@+id/txtDoorTitle2"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock4"
        android:paddingTop="7dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/txtDoorTitle2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Door Status"
        android:id="@+id/textView29"
        android:textSize="22dp"
        android:width="500sp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#ebebe0"
        android:height="40dp"
        android:layout_below="@+id/textClock4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView18"
        android:src="@drawable/borderline2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Condition :"
        android:id="@+id/textView30"
        android:textSize="13dp"
        android:gravity="center"
        android:layout_alignTop="@+id/imageView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView18"
        android:layout_toStartOf="@+id/imageView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Permission :"
        android:id="@+id/textView31"
        android:textSize="13dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView30"
        android:layout_toRightOf="@+id/textView30"
        android:layout_alignRight="@+id/textView29"
        android:layout_alignEnd="@+id/textView29" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imgDoorCondition2"
        android:src="@drawable/lockeddoor2"
        android:layout_below="@+id/textView30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageView18"
        android:layout_toStartOf="@+id/imageView18"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imgDoorPermission2"
        android:src="@drawable/granted"
        android:layout_alignTop="@+id/imgDoorCondition2"
        android:layout_toEndOf="@+id/imgDoorCondition2"
        android:layout_toRightOf="@+id/imgDoorCondition2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Closed"
        android:id="@+id/txtDoorStatus2"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView18"
        android:layout_alignRight="@+id/imageView18"
        android:layout_alignEnd="@+id/imageView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Granted"
        android:id="@+id/txtDoorPermision2"
        android:gravity="center"
        android:layout_alignBottom="@+id/txtDoorStatus2"
        android:layout_toRightOf="@+id/txtDoorStatus2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="Call Police"
        android:id="@+id/btnCallPoliceAtDoor"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:height="0dp" />
</RelativeLayout>
