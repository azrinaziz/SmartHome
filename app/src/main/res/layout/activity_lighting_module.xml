<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="app.smarthome.smarthome.LightingModule">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="253.5sp"
        android:id="@+id/imageView15"
        android:src="@drawable/lighting"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Manage your room brightness."
        android:id="@+id/textView5"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView15"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lighting"
        android:id="@+id/textView19"
        android:textSize="22dp"
        android:width="500sp"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#ebebe0"
        android:height="40dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/imageView15"
        android:layout_alignStart="@+id/imageView15"
        android:layout_marginTop="15dp" />

    <Switch
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/switchL"
        android:checked="false"
        android:clickable="true"
        android:layout_alignTop="@+id/textView25"
        android:layout_toRightOf="@+id/textView25"
        android:layout_toEndOf="@+id/textView25"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Living Room"
        android:id="@+id/textView25"
        android:textSize="20dp"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView16"
        android:src="@drawable/borderline2"
        android:layout_alignTop="@+id/switchL"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dining Room"
        android:id="@+id/textView26"
        android:textSize="20dp"
        android:layout_below="@+id/switchL"
        android:layout_alignLeft="@+id/textView25"
        android:layout_alignStart="@+id/textView25"
        android:layout_marginTop="15dp" />

    <Switch
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/switchD"
        android:checked="false"
        android:clickable="true"
        android:layout_alignTop="@+id/textView26"
        android:layout_alignLeft="@+id/switchL"
        android:layout_alignStart="@+id/switchL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Master Room"
        android:id="@+id/textView27"
        android:textSize="20dp"
        android:layout_alignTop="@+id/switchL"
        android:layout_toRightOf="@+id/switchL"
        android:layout_toEndOf="@+id/switchL"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kitchen"
        android:id="@+id/textView28"
        android:textSize="20dp"
        android:layout_alignTop="@+id/switchD"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27" />

    <Switch
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/switchM"
        android:checked="false"
        android:clickable="true"
        android:layout_alignTop="@+id/textView27"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <Switch
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/switchK"
        android:checked="false"
        android:clickable="true"
        android:layout_alignTop="@+id/textView28"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Set"
        android:id="@+id/btnSetLighting"
        android:layout_below="@+id/textView28"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
