<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.smarthome.smarthome.MainControl"
    android:background="@android:color/darker_gray">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security"
        android:id="@+id/btnDoor"
        android:width="180dp"
        android:layout_marginTop="43dp"
        android:height="115sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire Alarm"
        android:id="@+id/btnFireAlarm"
        android:width="180dp"
        android:height="115sp"
        android:layout_alignTop="@+id/btnDoor"
        android:layout_toRightOf="@+id/btnDoor"
        android:layout_toEndOf="@+id/btnDoor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:id="@+id/btnAlarm"
        android:width="180dp"
        android:height="115sp"
        android:layout_below="@+id/btnDoor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment"
        android:id="@+id/btnHomeTheater"
        android:width="180dp"
        android:height="115sp"
        android:layout_below="@+id/btnFireAlarm"
        android:layout_toRightOf="@+id/btnAlarm"
        android:layout_toEndOf="@+id/btnAlarm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stove"
        android:id="@+id/btnStove"
        android:width="180dp"
        android:height="115sp"
        android:layout_below="@+id/btnAlarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lighting"
        android:id="@+id/btnLighting"
        android:width="180dp"
        android:height="115sp"
        android:layout_below="@+id/btnHomeTheater"
        android:layout_toRightOf="@+id/btnStove"
        android:layout_toEndOf="@+id/btnStove" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloth Horse"
        android:id="@+id/btnClothHorse"
        android:width="180dp"
        android:height="115sp"
        android:layout_below="@+id/btnStove"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dishwasher"
        android:id="@+id/btnDishWasher"
        android:width="180dp"
        android:height="115sp"
        android:layout_below="@+id/btnLighting"
        android:layout_toRightOf="@+id/btnStove"
        android:layout_toEndOf="@+id/btnStove" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Project Smart Home"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_above="@+id/btnFireAlarm"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
